<h1>Checkmate - Show Games</h1>

<div class="board">
  <% (0..7).each do |row| %>
    <div class="row">
      <% (0..7).each do |square| %>
        <% row_even = row % 2 == 0 %>
        <% square_even = square % 2 == 0 %>
          <% if row_even == square_even %>
            <div class="square white">
              <% else %>
            <div class="square black">
          <% end %>
         
         
          <% if @game.piece_at(square, row) %>
            <%= link_to chess_piece_path(@game.piece_at(square, row).id), id: 'chess-piece' do %>
            <%= @game.piece_at(square, row).display.html_safe %>
          <% end %>
        <% end %>
         </div>
      <% end %>
   </div>
  <% end %>
</div>