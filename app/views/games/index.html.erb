<h1>Checkmate - Chess game</h1>

<% @games.available.each do |game| %>
  <div class="booyah-box col-10 offset-1">
    <p> Game number: <%= game.id %> </p>
    <p> White Player ID: <%= game.white_player_id %> </p>
    <p> Black Player ID: <%= game.black_player_id %> </p>
    <%= button_to "Join Game", game_path(game), method: :patch, class: 'btn btn-primary' %> 
  </div>
<% end %>