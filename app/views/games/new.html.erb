<h1>Checkmate - New Game</h1>

<div class="booyah-box col-10 offset-1">
  <%= simple_form_for @game do |f| %>
  <%= f.input :white_player_id, disabled: true, hint: 'You cannot change your player ID' %>
  <%= f.input :player_turn, disabled: true, hint: 'White player will go first' %>
  <%= f.button :submit %>
</div>
<br />
<% end %>